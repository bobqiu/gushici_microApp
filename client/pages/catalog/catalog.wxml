<!--pages/catalog/catalog.wxml-->
<view class='container catalog'>
<view  wx:if="{{showhead}}">
  <include src="../wxSearchView/wxSearchView.wxml" />
  <view style='margin-top:35rpx;' wx:if="{{historyplay}}">
  <view style='margin-left:10px;font-size:12px;'>最近播放</view>
  <view style='border-bottom:1px solid #eee;'>
    <text bindtap='go2detail' class='title my_catalog myclick' data-id_='{{item.id}}' wx:for="{{historyplay}}" wx:key="{{item.id}}"  style='border:1px solid #eee;display:inline-block;height:2em;line-height:2em;font-size:12px;padding:3px 4px;margin:4px;border-radis:2px;position:relative;'>{{item.work_title}}-{{item.work_author}}
     <text style='display:inline-block;width:40rpx;height:40rpx;border-radius:20rpx;background-color:#2BB630;text-align:center;line-height:40rpx;font-size:18rpx;position:absolute;top:-8px;right:-8px;opacity:0.8;color:white;'>{{item.playtimes}}</text>
    </text>
    </view>
  </view>
  <view style='margin-left:10px;margin-top:10px;;font-size:12px;'>搜索结果({{items.length}})</view>
  </view>
  <view wx:for="{{items}}" wx:key="id">
    <view class='itemSongci'>
      <view class='my_catalog myclick' data-id_='{{item.id}}'>
        <view class='songci' bindtap='go2detail' data-id_='{{item.id}}'>
          <text class='title' data-id_='{{item.id}}'>{{item.work_title}}</text>
          <text class='author' data-id_='{{item.id}}'>[{{item.work_dynasty}}] {{item.work_author}}</text>
          <view class='content' data-id_='{{item.id}}'>{{item.short_content}}</view>
        </view>
      </view>
      <view class='split'></view>
    </view>
  </view>
</view>